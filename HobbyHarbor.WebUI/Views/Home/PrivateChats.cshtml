@inject IViewLocalizer _localizer
@model ICollection<PrivateChatViewModel>

<div class="private-chats" oncontextmenu="onContextMenuPreventDefault(event)">
	@if (Model.Count == 0)
	{
		<div class="empty-chats-list">@_localizer["NoChats"]</div>
	}
	else
	{
		<div>
			@foreach (var privateChat in Model)
			{
				<vc:private-chat model="@privateChat"></vc:private-chat>
			}
		</div>
	}

	<div class="message-section">
		<vc:chat-window model="@(new List<MessageViewModel>())"></vc:chat-window>
	</div>
</div>
<div id="deletePrivateChat" class="private-chat-context hide">
	<div onclick="onPrivateChatDeleteClick()">@_localizer["Delete"]</div>
</div>