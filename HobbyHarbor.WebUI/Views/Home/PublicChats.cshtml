@inject IViewLocalizer _localizer
@model ICollection<PublicChatViewModel>

<div class="private-chats" oncontextmenu="onContextMenuPreventDefault(event)">
	@if (Model.Count == 0)
	{
		<div class="empty-chats-list">@_localizer["NoChats"]</div>
	}
	else
	{
		<div>
			@foreach (var publicChat in Model)
			{
				<vc:public-chat model="@publicChat"></vc:public-chat>
			}
		</div>
	}

	<div class="message-section">
		<vc:chat-window model="@(new List<MessageViewModel>())"></vc:chat-window>
	</div>
</div>
<div id="deletePublicChat" class="private-chat-context hide">
	<div onclick="onPublicChatDeleteClick()">@_localizer["Delete"]</div>
</div>