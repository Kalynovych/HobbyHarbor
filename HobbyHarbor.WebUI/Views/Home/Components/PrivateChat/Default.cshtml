@inject IViewLocalizer _localizer
@model PrivateChatViewModel

<div class="private-chat-wrapper" data-creatorId="@Model.CreatorId" data-companionId="@Model.CompanionId"
	onclick="onPrivateChatClick('@Model.CreatorId', '@Model.CompanionId')"
	oncontextmenu="onPrivateChatContextMenu(event, '@Model.CreatorId', '@Model.CompanionId')">
	<img class="comment-profile-image" src="data:image/jpg;base64,@Model.CompanionProfileImage" alt="@_localizer["ProfileBanner"]" />
	<div class="private-chat-info">
		<div class="private-chat-companion">
			<p>@Model.CompanionName</p>
			<p>@Model.LastMessageTime.ToShortTimeString()</p>
		</div>
		<div class="private-chat-last-message">
			@{
				string prefix = Model.LastMessageAuthor == User.FindFirst("name")?.Value ? _localizer["MessagePrefix"].Value : "";
				<p>@prefix @Model.LastMessage</p>
			}
		</div>
	</div>
</div>